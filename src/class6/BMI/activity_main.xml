<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI체크하기"
        android:textSize="30sp"
        android:id="@+id/textView3"
        android:layout_marginTop="66dp" android:layout_marginBottom="61dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weight" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.53"/>
    <TextView
        android:text="몸무게"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/weight" android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toTopOf="@+id/weight"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="57dp" android:layout_marginEnd="17dp"/>
    <TextView
        android:text="키"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/height"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="57dp"
        app:layout_constraintBottom_toBottomOf="@+id/height" android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="@+id/height"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="145dp"
        android:text="BMI"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/height" android:layout_marginEnd="31dp"
        android:hint="몸무게를 입력하세요"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="키를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/weight"
        app:layout_constraintStart_toStartOf="@+id/weight"
        app:layout_constraintTop_toBottomOf="@+id/weight" />

</android.support.constraint.ConstraintLayout>
