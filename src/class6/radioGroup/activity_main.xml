<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:id="@+id/radioGroup2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp" android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5">
        <RadioButton
            android:text="그림1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
            android:textSize="24sp" android:checked="true"/>
        <RadioButton
            android:text="그림2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"
            android:textSize="24sp"/>
        <RadioButton
            android:text="그림3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"
            android:textSize="24sp"/>
    </RadioGroup>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp" app:srcCompat="@drawable/img1"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="6dp" android:layout_marginEnd="6dp"/>

</android.support.constraint.ConstraintLayout>
